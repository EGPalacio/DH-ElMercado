<header class="header-section">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 text-center text-lg-left">
                    <!-- logo -->
                    <a href="/" class="site-logo">
                        <img src="/images/logo-elMercado-v2.png" alt="">
                    </a>
                </div>
                <div class="col-xl-6 col-lg-5">
                    <%- include('browser.ejs')%>
                </div>
                <div class="col-xl-4 col-lg-5">
                    <div class="user-panel">
                        <div class="up-item">
                            <i class="flaticon-profile"></i>

                            <% if (user == undefined ) { %> 
                                <a href="/login">Ingresa</a> o <a href="/register">Registrate</a>
                                  
                              
                            <% } else { %>
                                <a href="/profile">Hola <%=user.first_name%></a>
                                || <a href="/logout">Salir</a>
                
                       <% } %>





                            
                        </div>
                        <div class="up-item">
                            <div class="shopping-card">
                                <i class="flaticon-bag"></i>
                                <span>0</span>
                            </div>
                            <a href="/cart">Tu Carro</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="main-navbar">
        <div class="container">
            <!-- menu -->
            <%- include('navigation.ejs')%>
        </div>
    </nav>
</header>