<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <link rel="stylesheet" href="/css/styleProductoMF.css">
    <link rel="stylesheet" href="/css/header.css">
    <link
			rel="stylesheet"
			href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
			integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
            crossorigin="anonymous"
            >
	<title>Home</title>
</head>

<body>
    <div> <!-- Contenedor ppal -->
<!-- ENCABEZADO -->
<%- include('partials/header.ejs')%>
<!-- ENCABEZADO -->

        <main class="contenedor">
            <!-- PRIMER COLUMNA -->
            <div class="primerColumna">
            <!-- imagenes -->
            <div class="imagenProducto">
            <img class="producto" src="/images/<%= productFind.image %>">
            </div>
            <!-- imagenes -->

            <!-- descripcion detallada del producto -->
            <a href="" class="botonConsultar">CONSULTAR</a>

            <h2 class="h2PrimerColumna"><strong>Descripción detallada del Producto: </strong></h2>

            <p class="descripcionPrimerColumna"><%= productFind.description %></p>

            </div>
            <!-- descripcion detallada del producto -->
            <!-- PRIMER COLUMNA -->

            <!-- SEGUNDA COLUMNA -->
            <div class="segundaColumna">
                <div class="segunda">
                <p class="NS">NUEVO/USADO</p>
                <h2 class="h2subrayado"><strong><%= productFind.name %></strong></h2>
                <!-- estrellas -->
                <!-- estrellas -->
            <% if(productFind.discount > 0) { 
                    let getDiscountPercentage = discount => (100 - discount) / 100;
                    let finalPrice = (productFind.price * getDiscountPercentage(productFind.discount)).toFixed(0);
              %>
              <p class="descuento">
                <span>$<%= thousandGenerator(productFind.price) %></span>
                /
                <b><%= productFind.discount %>% OFF</b>
              </p>
              <p class="precio">
                $<%= thousandGenerator(finalPrice) %>
              </p>
            <% } else { %>
              <p class="precio">
                $<%= thousandGenerator(productFind.price) %>
              </p>
            <% } %>

                <p class="ulSegundaColumna"><%= productFind.description %></p>
                </div>
            </div>
            <!-- SEGUNDA COLUMNA -->

            <!-- TERCER COLUMNA -->
            <div class="tercerColumna">
                <!-- imagenes de las tarjetas -->
                <div class="tarjetasYtiempo">
                    <i class="far fa-credit-card imgTercerColumna"></i>
                    <p class="letrasAzules">HASTA EN 18 CUOTAS</p>
                </div>
                <!-- imagenes de las tarjetas -->
                <!-- imagenes del camion -->
                <div class="tarjetasYtiempo">
                <i class="fas fa-truck imgTercerColumna"></i>
                <p class="letrasAzules">LLEGARA EN 1 DIA</p>
                </div>
                <!-- imagenes del camion -->
                <p class="letrasAzules">SERA ENVIADO A LOCALIDAD</p>
                
                <p class="letrasNegras">Vendido por: <a href="">Nombre del vendedor</a></p>
                <p class="letrasNegras">Puntuación del vendedor</p>
                
            <form action='/cart/<%= productFind.id %> 'method="POST">
                <div class="cant">
                <p class="cantidad">Cantidad: <label for=""></label>
                <input class='inputNumber' type="number" name="cantidad" id="cantidad" min="1" max="99" required> <!-- El valor de max, debería estar especificado en el json de los productos que sube el usuario -->
                </p>
                </div>
                <input type="submit" value="+ Agregar al carrito" class="botonAgregar">
              
                <input type="submit" value="COMPRAR" class="botonComprar">
                <a href="/products/<%= productFind.id %>/edit" class="botonComprar">EDITAR</a>
            </form>

        
                <!-- TERCER COLUMNA -->

            </div>
	    </main>
	</div>

</body>

</html>
